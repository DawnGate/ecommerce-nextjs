{
	"name": "ecommerce-nextjs",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prettier-fix": "prettier --write .",
		"find:unused": "npx next-unused"
	},
	"dependencies": {
		"@react-spring/web": "^9.5.5",
		"clsx": "^1.2.1",
		"deepmerge": "^4.2.2",
		"eslint-config-prettier": "^8.5.0",
		"keen-slider": "^6.8.2",
		"next": "12.3.0",
		"next-themes": "^0.2.1",
		"node-fetch": "2.6.7",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-preset-env": "^7.8.2",
		"prettier": "^2.7.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-fast-marquee": "^1.3.5",
		"react-merge-refs": "^2.0.1"
	},
	"devDependencies": {
		"@types/node": "18.7.18",
		"@types/react": "18.0.20",
		"@types/react-dom": "18.0.6",
		"@vercel/fetch": "^6.2.0",
		"autoprefixer": "^10.4.11",
		"eslint": "^8.23.1",
		"eslint-config-next": "^12.3.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"postcss": "^8.4.16",
		"tailwindcss": "^3.1.8",
		"typescript": "4.8.3"
	},
	"lint-staged": {
		"**/*.{js,ts,jsx,tsx}": [
			"eslint",
			"prettier --write",
			"git add"
		],
		"**/*.{md,mdx,json}": [
			"prettier --write",
			"git add"
		]
	},
	"next-unused": {
		"alias": {
			"@lib/*": [
				"lib/*"
			],
			"@assets/*": [
				"asset/*"
			],
			"@config/*": [
				"config/*"
			],
			"@components/*": [
				"conponents/*"
			],
			"@utils/*": [
				"utils/*"
			]
		},
		"debug": true,
		"include": [
			"components",
			"lib",
			"pages"
		],
		"exlude": [],
		"entrypoints": [
			"pages"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	}
}
